<div class="container">
	<h1>Match Details</h1>

	<div class="row">
		<div class="col-sm-6">
			<dl class="worldColors dl-horizontal">
				<dt class="red">Red</dt>
				<dd class="red">{{red_name}}</dd>
				<dt class="blue">Blue</dt>
				<dd class="blue">{{blue_name}}</dd>
				<dt class="green">Green</dt>
				<dd class="green">{{green_name}}</dd>
			</dl>

			<div class="scoreContainer">
				<h3>Current Score</h3>
				<canvas class="chart chart-pie" chart-colours="chartColours" chart-legend="true"
					chart-data="chartData" chart-labels="chartLabels"></canvas>
			</div>
		</div>

		<div class="col-sm-6">
			<h4>Status updates</h4>
			<ol class="updateBox list-unstyled">
				<li ng-repeat="update in updates" class="{{update.color}}">
					{{update.world}} has captured {{update.objective}} on {{update.map}}!
				</li>
			</ol>
		</div>
	</div>
</div>
